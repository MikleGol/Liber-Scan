<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_dialog"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@color/beige_dark">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <ImageButton
                android:id="@+id/btn_beige"
                style="@style/Beige"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp" />

            <ImageButton
                android:id="@+id/btn_red"
                style="@style/Red"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp" />

            <ImageButton
                android:id="@+id/btn_yellow"
                style="@style/Yellow"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp" />
        </LinearLayout>

    <RadioGroup
        android:id="@+id/rad_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="138dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal">

        <RadioButton
            android:id="@+id/rad_sans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Arial"
            android:textColor="@color/beige"
            android:buttonTint="@color/beige"/>

        <RadioButton
            android:id="@+id/rad_serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Times New Roman"
            android:textColor="@color/beige"
            android:buttonTint="@color/beige"/>

        <RadioButton
            android:id="@+id/rad_monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Calibri"
            android:textColor="@color/beige"
            android:buttonTint="@color/beige"/>
    </RadioGroup>
    </LinearLayout>
</RelativeLayout>