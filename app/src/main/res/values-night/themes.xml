<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LiberScan" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/beige_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/beige_dark</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Beige" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/beige_dark</item>
        <item name="android:background">@drawable/button_beige</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Red" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/red_dark</item>
        <item name="android:background">@drawable/button_red</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Yellow" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/yellow_dark</item>
        <item name="android:background">@drawable/button_yellow</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ThemeOverlay.LiberScan.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
</resources>